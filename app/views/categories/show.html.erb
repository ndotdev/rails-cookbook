<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg);">
  <div class="container">
    <h1><%= @category.name %></h1>
  </div>
</div>


<div class="container">
    <div class="title-top">
        <h1> Recipes </h1>
        <%= link_to 'Add a recipe', new_category_bookmark_path(@category), class: "btn btn-warning" %>
    </div>
    
    <div class="cards">
        <% @category.bookmarks.each do |bookmark| %>
            <div class="card-trip">
            <img src="<%= bookmark.recipe.image_url %>" />

                <div class="card-trip-description">
                    <div>
                    <h2><%= bookmark.recipe.name %></h2>
                    <p><%= bookmark.recipe.description %></p>
                    </div>
                </div>

                <div class="card-trip-infos">
                    <div>
                    <i class="fa-solid fa-quote-left"></i> <%= bookmark.comment %>
                    </div>
                    <div>
                    <%= bookmark.recipe.rating %> <%= '⭐' * bookmark.recipe.rating %>
                    </div>
                </div>
            </div>
      <% end %>
    </div>
</div>